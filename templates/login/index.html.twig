{% extends 'base.html.twig' %}

{% block title %}login page{% endblock %}

{% block body %}
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="login-form-container">
        <form action="{{ path('login') }}" method="post">
           <div class="login-form-container-group">
               <label for="username">Email:</label>
               <input type="text" id="username" name="_username" value="{{ last_email }}"/>

           </div>
           <div class="login-form-container-group">
               <label for="password">Password:</label>
               <input type="password" id="password" name="_password"/>
           </div>
           <div class="login-form-container-group">
               <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
           </div>

           {# If you want to control the URL the user is redirected to on success #}
             <input type="hidden" name="_target_path" value="/admin"/> 
    
           <div class="login-btn-wrappers">
               <a href="{{ path('app_register')}}" class="registration-btn">Register</a>
               <button type="submit">login</button>

           </div>
        </form>
    </div>
    
{% endblock %}
